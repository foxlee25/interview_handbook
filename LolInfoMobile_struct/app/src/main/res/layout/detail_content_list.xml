<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/cv_item">

    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:paddingRight="@dimen/activity_horizontal_margin" />

        <ImageView
            android:id="@+id/img_favorite"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/favorite_red_9" />

        <TextView
            android:id="@+id/text_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:textColor="@color/colorBlack"/>

        <Button
            android:id="@+id/btn_getAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:visibility="gone"
            android:background="@color/colorLightBlue"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/text_question"/>

        <ImageView
            android:id="@+id/img_getAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/btn_getAnswer"/>
        <!--android:src="@drawable/test"-->

        <TextView
            android:id="@+id/text_getAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_below="@+id/btn_getAnswer"/>
        <Button
            android:id="@+id/move_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_getAnswer"
            android:background="@color/colorLightBlue"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@color/colorWhite"
            android:text="Prev"/>
        <Button
            android:id="@+id/move_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_getAnswer"
            android:layout_alignParentRight="true"
            android:background="@color/colorLightBlue"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@color/colorWhite"
            android:text="Next"/>
    </RelativeLayout>

</ScrollView>